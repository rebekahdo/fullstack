<!doctype html>
<html>
  <head>
    <title>Amazeriffic!</title>
    <link rel="stylesheet" href="/client/stylesheets/styles.css">
    <link href='http://fonts.googleapis.com/css?family=Ubuntu' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Droid+Sans' rel='stylesheet' type='text/css'>    
  </head>

  <body>
    <header>
      <div class="container">
        <h1>Amazeriffic!</h1>
        <nav>
          <a href="#">Sign Up!</a> |
          <a href="#">FAQ</a> |
          <a href="#">Support</a>
        </nav>
      </div>
    </header>

    <main>
      <div class="container">
        <div class="tabs">
          <a href=""><span class="active">Newest</span></a>
          <a href=""><span>Oldest</span></a>
          <a href=""><span>Tags</span></a>
          <a href=""><span>Add</span></a>
          <form id="new-todo" action="/todos" method="POST">
            <input type="text" placeholder="decscription" name="description">
            <input type="text" placeholder="tags" name="tags">
            <button type="submit">Submit</button>
          </form>

        </div>
        <div class="content">
            <ul class="todos">
                <!-- Loop through todos -->
                <% for(var i = 0; i < todos.length; i++) {%>
                    <li class="todo">
                    <!-- Output name from the iterated todo object -->
                    <span><%= todos[i].description %></span>
                    </li>
                <% } %>
                </ul>
        </div>
      </div>
    </main>

    <footer>
      <div class="container">
        <div class="contact">
          <h5>Contact Us</h5>
          <p>Amazeriffic!</p>
          <p>555 Fiftieth Street</p>
          <p>Asheville, NC 28801</p>
        </div>
        <div class="sitemap">
          <h5>Sitemap</h5>
          <ul>
            <div class="left">
              <li><a href="#">Home</a></li>
              <li><a href="#">About Us</a></li>
              <li><a href="#">Privacy</a></li>
            </div>
            <div class="right">
              <li><a href="#">Support</a></li>
              <li><a href="#">FAQ</a></li>
              <li><a href="#">Careers</a></li>
            </div>
          </ul>
        </div>
      </div>
    </footer>
    
    <script src="http://code.jquery.com/jquery-2.0.3.min.js"></script>
  </body>
</html>
